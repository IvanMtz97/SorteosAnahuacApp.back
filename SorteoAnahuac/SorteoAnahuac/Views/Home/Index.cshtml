<div class="jumbotron">
    <h1>Sorteo Anáhuac</h1>
    <p class="lead">Este es el portal de verificación de boletos para el Sorteo Anáhuac</p>
    <p><a href="http://www.sorteoanahuac.com" class="btn btn-primary btn-lg">Acerca del Sorteo &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Acceso</h2>
        @{
            if (User.Identity.IsAuthenticated)
            {
                <p>Bienvenido @User.Identity.Name, tu sesión esta activa.</p>
                <p>
                    <a href="@Url.Action("Index","Notificaciones")" class="btn btn-default">Ingresar &raquo;</a>
                </p>
            }
            else
            {
    <form action="@Url.Action("Login")" method="post">
            <div class="form-group">
                <label for="usuario">
                    Correo:
                </label>
                <input type="text" name="usuario" id="usuario" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">
                    Contraseña:
                </label>
                <input type="password" name="password" id="password" class="form-control" />
            </div>
            <p><button type="submit" class="btn btn-default">Ingresar &raquo;</button></p>
            @{
                object error = TempData["error"];
                if (error != null && !string.IsNullOrEmpty(error.ToString()))
                {
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @error.ToString()
                    </div>
                }
            }
        </form>
            }
        }
        
    </div>
</div>
